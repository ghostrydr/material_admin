name = Material Admin
description = A responsive administration theme for Drupal, inspired by Google's Material Design.
;base theme = omega
screenshot = screenshot.png
engine = phptemplate
core = 7.x


; Stylesheets
stylesheets[all][] = css/material-admin.normalize.css
stylesheets[all][] = css/material-admin.grid.css
stylesheets[all][] = css/material-admin.styles.css
stylesheets[all][] = css/material-admin.no-query.css
stylesheets[print][] = css/material-admin.print.css

; Scripts
scripts[] = js/material-admin.behaviors.js

; Regions
regions[branding] = Branding
regions[highlighted] = Highlighted
regions[help] = Help
regions[content] = Content
regions[footer] = Footer

; Settings
settings[toggle_logo] = 1
settings[toggle_name] = 1
settings[toggle_slogan] = 1
settings[toggle_node_user_picture] = 1
settings[toggle_comment_user_picture] = 1
settings[toggle_comment_user_verification] = 1
settings[toggle_favicon] = 1
settings[toggle_main_menu] = 1
settings[toggle_secondary_menu] = 1
settings[omega_toggle_front_page_content] = 1
settings[default_logo] = 1
settings[logo_path] = ""
settings[logo_upload] = ""
settings[default_favicon] = 1
settings[favicon_path] = ""
settings[favicon_upload] = ""
